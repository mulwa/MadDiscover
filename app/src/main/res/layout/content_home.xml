<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TopEvents"
    tools:showIn="@layout/app_bar_home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eventLayout">
        <ProgressBar
            android:id="@+id/event_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:indeterminateDrawable="@drawable/imageprogressbar">
        </ProgressBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_try"
            android:id="@+id/connection_error"
            android:textSize="18sp"
            android:visibility="visible"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_tryAgain"
            android:layout_below="@+id/connection_error"
            android:text="Try Again"/>
        <TextView
            style="@style/TextViewTitle"
            android:id="@+id/title1"
            android:gravity="center"
            android:text="TOP EVENTS"
            />
        <ListView
            android:layout_below="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topEvents"/>
    </RelativeLayout>
</RelativeLayout>
